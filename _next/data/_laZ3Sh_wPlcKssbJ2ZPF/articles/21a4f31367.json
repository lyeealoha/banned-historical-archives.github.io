,{"id":"db065bf7be","type":"paragraph","text":"湖北省委第一书记","index":38,"publicationId":"cb043827-1a6a-46f3-863d-a430958e5a0d","articleId":"21a4f31367","publication":{},"article":{}},{"id":"5d007de8f1","type":"paragraph","text":"王力粗具","index":39,"publicationId":"cb043827-1a6a-46f3-863d-a430958e5a0d","articleId":"21a4f31367","publication":{},"article":{}},{"id":"c6824c89de","type":"paragraph","text":"《红旗》付主漏","index":40,"publicationId":"cb043827-1a6a-46f3-863d-a430958e5a0d","articleId":"21a4f31367","publication":{},"article":{}},{"id":"8df6a354e7","type":"paragraph","text":"张车化","index":41,"publicationId":"cb043827-1a6a-46f3-863d-a430958e5a0d","articleId":"21a4f31367","publication":{},"article":{}},{"id":"d79d8d0969","type":"paragraph","text":"中宣部付部长（原湖南省第一书记）","index":42,"publicationId":"cb043827-1a6a-46f3-863d-a430958e5a0d","articleId":"21a4f31367","publication":{},"article":{}},{"id":"789f7b1d1c","type":"paragraph","text":"·406。","index":43,"publicationId":"cb043827-1a6a-46f3-863d-a430958e5a0d","articleId":"21a4f31367","publication":{},"article":{}}],"page":{"start":416,"end":415}}}},"__N_SSG":true}